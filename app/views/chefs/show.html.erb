<div class="row">
	<div class="col-md-3 col-md-offset-0 center">
		<%= gravatar_for @chef, size: 350%><br><br><br><br>
		<strong>Name:  </strong><%= @chef.firstname + " " + @chef.surname %><br>
			

			<% if @chef.gender == true %>
			<strong>Sex: </strong>Male
			<% else %>
			<strong>Sex: </strong>Female

			<% end %> <br>

		<strong>Birthday:  </strong><%=  @chef.dob %><br>
		<strong>Country:  </strong><%=  @chef.country %><br>
		<strong>Profile picture:  </strong><%=  @chef.ppicture %><br>

	</div>
</div>

<div class="row">
	<div class="col-lg-4 col-lg-offset-4 center">
		<h3><em>Recipes:</em></h3>
		<%= will_paginate @recipes %>
	</div>
</div>

<% @recipes.each do |recipe| %>
<div class="row">
<div class="col-lg-6 well col-lg-offset-3">
	<h4><%= link_to recipe.name, recipe_path(recipe) %> </h4>
	<p><%= recipe.summary %>  </p>
	<p>
	<span class="quiet"> <small> Created: <%= time_ago_in_words(recipe.created_at)%> ago,</small></span>
	<span class="quiet"> <small> Updated: <%= time_ago_in_words(recipe.updated_at)%> ago</small></span>

	</p>
	<div class="pull-right">
	<%= link_to like_recipe_path(recipe, like: true), method: :post do  %>
<i class="glyphicon glyphicon-thumbs-up"> </i> &nbsp <%= recipe.thumbs_up_total %>
	<% end %> &nbsp&nbsp&nbsp&nbsp
	<%= link_to like_recipe_path(recipe, like: false), method: :post do  %>
<i class="glyphicon glyphicon-thumbs-down"> </i> &nbsp <%= recipe.thumbs_down_total %>
	<% end %>
</div>
</div>
</div>
<% end %>